{{- /*
  vim:ft=yaml.gotmpl:
    */ -}}

{{-
  $dictProjects := dict
    "fonts"  "ryanoasis/nerd-fonts"
  -}}
{{-
  $dictVersions := dict
    "fonts"  "v2.2.2"
  -}}

---
{{ range $title, $project := $dictProjects -}}
{{ $default := dig $title "v0.0.1" $dictVersions | printf
  "https://github.com/%s/releases/download/%s" $project
  -}}
{{ $title -}} :
    url: {{
        replace "releases/tag" "releases/download"
        (gitHubLatestRelease $project).GetHTMLURL | default $default | quote
    }}
    version: {{
        default (dig $title "v0.0.1" $dictVersions)
        (gitHubLatestRelease $project).GetTagName | quote
    }}
{{ end -}}
